<?xml version="1.0" encoding="UTF-8"?>

<!-- These are the imports. Every element below needs one of these! -->
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.shape.Rectangle?>

<!-- The root tag needs the xmlns (namespaces) and the controller path -->
<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #f1f8e9;"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.mockinterview.InterviewController">

    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <VBox alignment="CENTER" spacing="10">
        <!-- Circle for the Avatar background -->
        <Circle fill="WHITE" radius="80.0" stroke="#2e7d32" strokeWidth="3.0" />

        <!-- We move the icon UP using translateY so it sits inside the circle -->
        <FontIcon fx:id="interviewerIcon" iconLiteral="fas-user-md" iconSize="80" translateY="-115" />

        <Label fx:id="interviewerNameLabel" text="Interviewer Name" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
        <Label fx:id="statusLabel" text="Ready to start..." textFill="#666666" style="-fx-font-style: italic;" />
    </VBox>

    <!-- This is the orange bar from your sketch -->
    <HBox alignment="CENTER" spacing="15" prefHeight="80" maxWidth="350"
          style="-fx-background-color: #ffcc80; -fx-background-radius: 50; -fx-border-color: #ef6c00; -fx-border-radius: 50;">
        <padding>
            <Insets left="20" right="20" />
        </padding>

        <HBox alignment="CENTER" spacing="5">
            <Rectangle width="5" height="20" fill="#ef6c00" />
            <Rectangle width="5" height="40" fill="#ef6c00" />
            <Rectangle width="5" height="25" fill="#ef6c00" />
            <Rectangle width="5" height="35" fill="#ef6c00" />
        </HBox>

        <FontIcon iconLiteral="fas-microphone" iconSize="30" iconColor="#ef6c00" />
    </HBox>

</VBox>