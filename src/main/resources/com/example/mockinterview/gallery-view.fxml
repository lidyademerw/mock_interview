<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox alignment="TOP_CENTER" spacing="30.0" style="-fx-background-color: #f1f8e9;"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.mockinterview.GalleryController">

    <padding>
        <Insets top="50.0" bottom="20.0" left="20.0" right="20.0"/>
    </padding>

    <Label text="Select Your Interviewer" style="-fx-font-size: 28px; -fx-font-weight: bold;" textFill="#2e7d32" />

    <GridPane hgap="20.0" vgap="20.0" alignment="CENTER">

        <!-- 3. The Column Rules (Shelf Dividers) -->
        <columnConstraints>
            <ColumnConstraints percentWidth="30.0" halignment="CENTER" />
            <ColumnConstraints percentWidth="30.0" halignment="CENTER" />
            <ColumnConstraints percentWidth="30.0" halignment="CENTER" />
        </columnConstraints>

        <!--Software Lead -->
        <VBox alignment="CENTER" spacing="10" maxWidth="150"
              style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);"
              GridPane.columnIndex="0" GridPane.rowIndex="0">
            <FontIcon iconLiteral="fas-laptop-code" iconSize="40" />
            <Label text="Software Lead" style="-fx-font-weight: bold;"/>
            <Button text="Select" onAction="#onSelectInterviewer" styleClass="btn, btn-primary"/>
        </VBox>

        <!--  Medical Doctor -->
        <VBox alignment="CENTER" spacing="10" maxWidth="150"
              style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);"
              GridPane.columnIndex="1" GridPane.rowIndex="0">
            <FontIcon iconLiteral="fas-user-md" iconSize="40" />
            <Label text="Medical Doctor" style="-fx-font-weight: bold;"/>
            <Button text="Select" onAction="#onSelectInterviewer" styleClass="btn, btn-primary"/>
        </VBox>

        <!-- Graduate -->
        <VBox alignment="CENTER" spacing="10" maxWidth="150"
              style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);"
              GridPane.columnIndex="2" GridPane.rowIndex="0">
            <FontIcon iconLiteral="fas-user-graduate" iconSize="40" />
            <Label text="Graduate" style="-fx-font-weight: bold;"/>
            <Button text="Select" onAction="#onSelectInterviewer" styleClass="btn, btn-primary"/>
        </VBox>

        <!-- Teacher -->
        <VBox alignment="CENTER" spacing="10" maxWidth="150"
              style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);"
              GridPane.columnIndex="0" GridPane.rowIndex="1">
            <FontIcon iconLiteral="fas-chalkboard-teacher" iconSize="40" />
            <Label text="Teacher" style="-fx-font-weight: bold;"/>
            <Button text="Select" onAction="#onSelectInterviewer" styleClass="btn, btn-primary"/>
        </VBox>

        <!--  Nurse -->
        <VBox alignment="CENTER" spacing="10" maxWidth="150"
              style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);"
              GridPane.columnIndex="1" GridPane.rowIndex="1">
            <FontIcon iconLiteral="fas-user-nurse" iconSize="40" />
            <Label text="Nurse" style="-fx-font-weight: bold;"/>
            <Button text="Select" onAction="#onSelectInterviewer" styleClass="btn, btn-primary"/>
        </VBox>

        <!-- Manager -->
        <VBox alignment="CENTER" spacing="10" maxWidth="150"
              style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);"
              GridPane.columnIndex="2" GridPane.rowIndex="1">
            <FontIcon iconLiteral="fas-user-tie" iconSize="40" />
            <Label text="Manager" style="-fx-font-weight: bold;"/>
            <Button text="Select" onAction="#onSelectInterviewer" styleClass="btn, btn-primary"/>
        </VBox>

    </GridPane>

</VBox>